	 public void actionPerformed(ActionEvent e) {
		 String cmd = e.getActionCommand();
		 if (cmd.equals("查询读者信息")) {
//			 System.out.println("借阅证号"+","+"姓名"+","+"性别"+","+"单位"+","+"联系电话"+","+"身份证号码"
//					 +","+"借阅证件类型"+","+"办卡时间"+","+"卡状态");
//			 System.out.println();
			 GoddessAction it = new GoddessAction();
			      try {
					it.cha();
				} catch (Exception e1) {
					e1.printStackTrace();
				}
		 }

		 
		 if (cmd.equals("增加读者信息")) {
			 GoddessAction it2 = new GoddessAction();
			 try {
				it2.zeng();
			} catch (Exception e1) {
				e1.printStackTrace();
			}
		 }
    		 if (cmd.equals("删除读者信息")) {
    			 GoddessAction it3 = new GoddessAction();
    			 try {
					it3.shan();
				} catch (Exception e1) {
					e1.printStackTrace();
				}	 
    		 }
         if (cmd.equals("修改读者信息")) {
        	 GoddessAction it4 = new GoddessAction();
        	 try {
				it4.gai();
			} catch (Exception e1) {
				e1.printStackTrace();
			}
		 }
		 if (cmd.equals("退出登录")) {
			 setVisible(false);// 本窗口隐藏
			 dispose();//本窗口销毁,释放内存资源
		 }	 
	 }
	 

	 public static void main(String[] args) {
	        new User().setVisible(true);//创建登录窗口,并可见

	    }
}
